# ===== 앱 기본 설정 =====
PROJECT_NAME="AI 이미지 생성 플랫폼"
ENVIRONMENT=development
DEBUG=True

# ===== 데이터베이스 =====
DATABASE_URL=sqlite+aiosqlite:///./app.db
# PostgreSQL (Supabase)
# SUPABASE_DB_URL=postgresql+asyncpg://user:password@host:5432/database

# ===== Supabase BaaS =====
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_BUCKET=images

# ===== Redis =====
REDIS_URL=redis://localhost:6379/0
# Upstash (Serverless Redis for Vercel)
# UPSTASH_REDIS_URL=redis://default:password@region.upstash.io:6379

# ===== JWT 인증 =====
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===== AI Services =====
# Google Gemini (무료 티어)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id

# Unsplash
UNSPLASH_ACCESS_KEY=your-unsplash-access-key

# Rembg Service
REMBG_API_URL=http://localhost:5000

# ===== Rate Limiting =====
RATE_LIMIT_DAILY=10
RATE_LIMIT_HOURLY=3

# ===== Monitoring =====
# SENTRY_DSN=https://your-sentry-dsn
